<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:text="Sequence(s) and / or secondary structure(s):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/search_button"
        android:layout_marginTop="47dp"
        android:editable="false" />

    <Button
        android:text="Choose file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_button"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="24dp" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:id="@+id/search_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/choose_button" />

    <Button
        android:text="Advanced search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search_button"
        android:layout_toEndOf="@+id/search_button"
        android:layout_marginStart="21dp"
        android:id="@+id/adv_search_button" />

    <TextView
        android:text="Plik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insert"
        android:layout_marginStart="24dp"
        android:editable="true"
        android:layout_alignBaseline="@+id/choose_button"
        android:layout_alignBottom="@+id/choose_button"
        android:layout_alignStart="@+id/adv_search_button" />

    <TextView
        android:text="Insert sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_button"
        android:layout_toEndOf="@+id/choose_button"
        android:layout_marginTop="25dp"
        android:id="@+id/textView7"
        android:editable="true" />
</RelativeLayout>