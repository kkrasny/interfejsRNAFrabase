<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.user.interfejsrnafrabase.Stem">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <TextView
            android:text="Experimental method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="121dp"
            android:id="@+id/textView54"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView54"
            android:layout_alignStart="@+id/textView54"
            android:layout_marginTop="27dp"
            android:id="@+id/spinner24"
            android:layout_alignEnd="@+id/textView54" />

        <TextView
            android:text="Case sensitive (modified residues sensitive search):"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner24"
            android:layout_alignStart="@+id/spinner24"
            android:layout_marginTop="17dp"
            android:id="@+id/textView55" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView55"
            android:layout_toEndOf="@+id/textView55"
            android:id="@+id/checkBox8" />

        <TextView
            android:text="Stem length "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView55"
            android:layout_alignStart="@+id/textView55"
            android:layout_marginStart="7dp"
            android:layout_marginTop="31dp"
            android:id="@+id/textView56"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView56"
            android:layout_alignStart="@+id/textView56"
            android:layout_marginTop="24dp"
            android:id="@+id/spinner25" />

        <TextView
            android:text="First strand:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView58"
            android:layout_alignEnd="@+id/textView58"
            android:layout_marginTop="16dp"
            android:id="@+id/textView59" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox9"
            android:layout_alignBaseline="@+id/textView61"
            android:layout_alignBottom="@+id/textView61"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editText7"
            android:layout_toEndOf="@+id/textView57"
            android:id="@+id/editText8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_above="@+id/textView60"
            android:layout_toEndOf="@+id/spinner25" />

        <TextView
            android:text="Second strand (optional)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/textView60"
            android:layout_below="@+id/textView59"
            android:layout_alignStart="@+id/textView59" />

        <TextView
            android:text="Include all models of the structure:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/textView61"
            android:layout_below="@+id/editText8"
            android:layout_alignStart="@+id/textView60" />

        <Button
            android:text="Search"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_above="@+id/spinner24"
            android:layout_toEndOf="@+id/textView61"
            android:layout_marginBottom="33dp"
            android:id="@+id/button7" />

        <TextView
            android:text="Sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:id="@+id/textView58"
            android:textStyle="bold"
            android:layout_below="@+id/spinner25"
            android:layout_alignStart="@+id/spinner25" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_above="@+id/textView58"
            android:layout_toEndOf="@+id/textView61" />

        <TextView
            android:text="Length:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView57"
            android:layout_alignTop="@+id/spinner25"
            android:layout_toStartOf="@+id/editText6" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
